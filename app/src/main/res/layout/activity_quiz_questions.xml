<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizQuestions">

    <LinearLayout
        android:id="@+id/navBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E7E7E7"
        android:orientation="horizontal"
        android:weightSum="16">

        <TextView
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="11"
            android:fontFamily="@font/alatsi"
            android:gravity="center"
            android:text="Name"
            android:textColor="#098E0F"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llImg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_below="@+id/navBar"
        android:padding="16dp">

        <TextView
            android:id="@+id/txtQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alatsi"
            android:text="Questions"
            android:textSize="28sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#B8730D"/>

        <ImageView
            android:id="@+id/imageCity"
            android:layout_width="wrap_content"
            android:layout_height="224dp"
            app:srcCompat="@drawable/bangkok" />
        <LinearLayout
            android:id="@+id/llProgressDetail"
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="288dp"
                android:layout_height="9dp"
                android:layout_weight="1"
                android:indeterminate="false"
                android:max="15"
                android:minHeight="50dp"
                android:progress="0" />

            <TextView
                android:id="@+id/txtProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#787474"
                android:textColorHint="#7A8089"
                android:textSize="16sp"
                tools:text="0/13"/>


        </LinearLayout>

        <TextView
            android:id="@+id/txtOption1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector"
            android:fontFamily="@font/alatsi"
            android:layout_margin="10dp"
            android:gravity="center"
            android:padding="12dp"
            android:textColor="#222"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Option 1" />
        <TextView
            android:id="@+id/txtOption2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector"
            android:fontFamily="@font/alatsi"
            android:layout_margin="10dp"
            android:gravity="center"
            android:padding="12dp"
            android:textColor="#222"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Option 2" />
        <TextView
            android:id="@+id/txtOption3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector"
            android:fontFamily="@font/alatsi"
            android:layout_margin="10dp"
            android:gravity="center"
            android:padding="12dp"
            android:textColor="#222"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Option 3" />
        <TextView
            android:id="@+id/txtOption4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector"
            android:fontFamily="@font/alatsi"
            android:layout_margin="8dp"
            android:gravity="center"
            android:padding="12dp"
            android:textColor="#222"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Option 4" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:layout_marginTop="4dp"
            android:textSize="20sp"
            android:textColor="#fff"
            android:background="@drawable/button"
            android:fontFamily="@font/alatsi" />

    </LinearLayout>



</RelativeLayout>